<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_in_blue_bg"
    tools:context="lexlink.app.com.lexlink.activities.LoginActivity">
    <ToggleButton
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/login_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_toggle"
        android:textOn=""
        android:textOff=""
        android:focusable="false"
        android:focusableInTouchMode="false" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="60dp"
        android:layout_height="wrap_content">
        <lexlink.app.com.lexlink.baseviews.BaseEdittext
            android:layout_width="match_parent"
            android:id="@+id/login_email"
            android:hint="Email"
            android:textColor="@color/white"
            android:inputType="textWebEmailAddress"
            android:textColorHint="@color/login_text_color"
            android:layout_height="wrap_content" />
        <lexlink.app.com.lexlink.baseviews.BaseEdittext
            android:layout_width="match_parent"
            android:id="@+id/login_password"
            android:hint="Password"
            android:textColor="@color/white"
            android:inputType="textPassword"
            android:textColorHint="@color/login_text_color"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <lexlink.app.com.lexlink.baseviews.BaseTextview
                android:layout_width="wrap_content"
                android:text="Forgot Password?"
                android:id="@+id/login_frogot_pass"
               android:layout_alignParentLeft="true"
                android:textColor="@color/login_text_color"
                android:layout_height="wrap_content" />
            <lexlink.app.com.lexlink.baseviews.BaseTextview
                android:layout_width="wrap_content"
                android:text="Reset Password"
                android:id="@+id/login_reset_pass"
                android:layout_alignParentRight="true"
                android:textColor="@color/login_text_color"
                android:layout_gravity="right"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/button_sign_in"
            android:text="Sign in"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18"
            android:background="@color/button_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
