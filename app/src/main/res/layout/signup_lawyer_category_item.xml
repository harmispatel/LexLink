<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="30dp"
    android:background="@color/spinner_bg"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/ten_dp"
    android:paddingTop="@dimen/ten_dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ten_dp">

        <ImageView
            android:id="@+id/category_iv_radio_on_off"
            style="@style/signup_custom_radio_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:src="@drawable/radio_btn_unselected"
            android:visibility="visible" />

    </RelativeLayout>

    <lexlink.app.com.lexlink.baseviews.BaseTextview
        android:id="@+id/category_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ten_dp"
        android:text="@string/lawyer_category"
        android:textColor="@color/white"
        android:textSize="@dimen/text_20"

        />
</LinearLayout>